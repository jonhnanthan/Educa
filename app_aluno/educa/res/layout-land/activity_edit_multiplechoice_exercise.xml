<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/bg_home_land"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context="com.educa.activity.MainActivity"
    tools:ignore="MergeRootFrame" >

    <EditText
        android:id="@+id/question_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_et"
        android:hint="Pergunta"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#777777"
        android:textColorHint="#AAAAAA"
        android:textCursorDrawable="@drawable/cursor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:textColor="#FFFFFF"
                android:textSize="16sp" >

                <RadioButton
                    android:id="@+id/rb_answer1"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:button="@drawable/selector_right_answer"
                    android:paddingLeft="10dp"
                    android:textColor="#00FFFFFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_answer2"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/selector_right_answer"
                    android:paddingLeft="10dp"
                    android:textColor="#00FFFFFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_answer3"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/selector_right_answer"
                    android:paddingLeft="10dp"
                    android:textColor="#00FFFFFF"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_answer4"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/selector_right_answer"
                    android:paddingLeft="10dp"
                    android:textColor="#00FFFFFF"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-20dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/answer1_match"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/selector_et"
                android:hint="Resposta1"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#777777"
                android:textColorHint="#AAAAAA"
                android:textCursorDrawable="@drawable/cursor" />

            <EditText
                android:id="@+id/answer2_match"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_et"
                android:hint="Resposta2"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#777777"
                android:textColorHint="#AAAAAA"
                android:textCursorDrawable="@drawable/cursor" />

            <EditText
                android:id="@+id/answer3_match"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_et"
                android:hint="Resposta3"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#777777"
                android:textColorHint="#AAAAAA"
                android:textCursorDrawable="@drawable/cursor" />

            <EditText
                android:id="@+id/answer4_match"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_et"
                android:hint="Resposta4"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#777777"
                android:textColorHint="#AAAAAA"
                android:textCursorDrawable="@drawable/cursor" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.3"
            android:clickable="false"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/bt_previous_step"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/selector_bt_step" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="-70dp"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/previous" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/bt_ok_match"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/selector_bt_step" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="-70dp"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/next" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>