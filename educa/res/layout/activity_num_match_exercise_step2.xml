<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/bg_home"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context="com.educa.activity.MainActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:id="@+id/layout_color"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:alpha="0.8"
        android:background="#FF0924"
        android:orientation="vertical" >
    </LinearLayout>

    <EditText
        android:id="@+id/question_match"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-80dp"
        android:background="@drawable/selector_et"
        android:hint="Pergunta"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#777777"
        android:textColorHint="#AAAAAA"
        android:textCursorDrawable="@drawable/cursor" />

    <EditText
        android:id="@+id/answer1_match"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_et"
        android:hint="Resposta1"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#777777"
        android:textColorHint="#AAAAAA"
        android:textCursorDrawable="@drawable/cursor" />

    <EditText
        android:id="@+id/answer2_match"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_et"
        android:hint="Resposta2"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#777777"
        android:textColorHint="#AAAAAA"
        android:textCursorDrawable="@drawable/cursor" />

    <EditText
        android:id="@+id/answer3_match"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_et"
        android:hint="Resposta3"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#777777"
        android:textColorHint="#AAAAAA"
        android:textCursorDrawable="@drawable/cursor" />

    <EditText
        android:id="@+id/answer4_match"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_et"
        android:hint="Resposta4"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="#777777"
        android:textColorHint="#AAAAAA"
        android:textCursorDrawable="@drawable/cursor" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/bt_previous_step"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/selector_bt_step" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="-70dp"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/previous" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/bt_ok_match"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/selector_bt_step" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="-70dp"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/next" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>